 <configuration>
 {% for intf in interfaces -%}
 <interfaces>
                <interface>
                    <name>{{ intf }}</name>
                    <unit>
                        <name>0</name>
                        <family operation="replace">
                            <inet>
                                <address>{{ interfaces[intf].ipv4_address }}</address>
                            </inet>
                            
                        </family>
                        {% if mpls == True -%}
                        <family>
                          <mpls></mpls>
                        </family>
                        {% endif %}
                    </unit>
                </interface>
            </interfaces>
{% endfor %}
</configuration>